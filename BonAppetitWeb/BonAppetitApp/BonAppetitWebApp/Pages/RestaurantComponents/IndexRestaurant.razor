<div class="col-4 restaurant-box" @onclick="() => RestaurantDetailsRedirect(Restaurant.RestaurantId)">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0 pointer">
            <div class="col-md-4">
                <img src="..." class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Restaurant.RestaurantName</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Cuisine: @Restaurant.RestaurantCuisineType</li>
                        <li class="list-group-item">Address: @Restaurant.RestaurantAddress</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>