@page "/ReservationConfirmed"
<div class="container">
    <div class="row">
        <div class="col-12 page-title">
            @if (Request)
            {
                <h2 class="lobster">Thank you!</h2>
                <br />
                <h4 class="lobster link">An email will be sent shortly, with the confirmation of the reservation and more.</h4>
                <br />
                <NavLink class="bg-transparent lobster text-black-50 link" href="">Bon Appetit!</NavLink>
            }
            else
            {
                <h2 class="lobster">Sorry!</h2>
                <br />
                <span class="link">An error has occurred, please try again.</span>
                <p><mark>Payment was not successful</mark></p>
                <br />
                <NavLink class="bg-transparent lobster text-black-50 link" href="">Bon Appetit!</NavLink>

            }
        </div>
    </div>
</div>
