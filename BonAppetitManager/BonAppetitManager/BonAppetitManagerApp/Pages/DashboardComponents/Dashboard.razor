@page "/Dashboard"
<AuthorizeView>
    <Authorized>
        <DashboardMenu MenuSelectionCallback="DashboardMenuSelection" />

        @{
            if (Component == "Analytics")
            {
                <AnalyticComponentsSelections TopMenuList="@AnalyticsTopMenuList" Selection="@TopMenuSelection"/>
            }
            if (Component == "Restaurant")
            {
                <RestaurantComponentsSelections TopMenuList="@RestaurantTopMenuList"  Selection="@TopMenuSelection"/>
            }
            if (Component == "Tables")
            {
                <TablesComponentsSelections TopMenuList="@TablesTopMenuList" Selection="@TopMenuSelection"/>
            }
            if (Component == "Reservations")
            {
                <ReservationsComponentsSelections TopMenuList="@ReservationsTopMenuList" Selection="@TopMenuSelection"/>
            }
            if (Component == "Menus")
            {
                <MenuComponentsSelections TopMenuList="@MenusTopMenuList" />
            }
            if (Component == "Coupons")
            {
                <CouponComponentsSelections TopMenuList="@CouponTopMenuList" />
            }
        }
    </Authorized>
</AuthorizeView>